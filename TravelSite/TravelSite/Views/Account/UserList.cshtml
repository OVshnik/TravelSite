@using TravelSite.Models.Account
@{
	ViewData["Title"] = "UserList";
}
@model List<UserViewModel>

<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">

@if (Model.Count != 0)
{
	<a class="" method=get asp-area="" asp-controller="Account" asp-action="Register">Добавить пользователя</a>
	<div>
		<label class="fs-5">Пользователи</label>
	</div>
	@foreach (var user in Model)
	{
		<div class="card mb-1">
			<a class="text-decoration-none" method=get asp-area="" asp-controller="Account" asp-route-id="@user.User.Id" asp-action="GetUser">
				<div class="card-text">@user.User.GetFullName()</div>
			</a>
			<div class="text-lg-start">@user.User.Email</div>
		</div>
	}
}
else
{
	<div>
		<label class="fs-5">Пользователей пока нет</label>
	</div>
	<a class="" method=get asp-area="" asp-controller="Register" asp-action="Register">Добавить пользователя</a>
}
